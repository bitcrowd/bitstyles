{
  "name": "bitstyles",
  "version": "0.9.2",
  "description": "The Bitcrowd CSS library",
  "main": "bitstyles.scss",
  "scripts": {
    "build": "node-sass scss/bitstyles.scss -o build --output-style compact",
    "postbuild": "postcss build/bitstyles.css --output build/bitstyles.css",
    "lint:scss": "stylelint scss/**/*.scss --syntax scss",
    "lint:js": "eslint --ignore-path .gitignore --ext js,jsx .",
    "lint": "yarn lint:scss && yarn lint:js",
    "checks": "yarn lint && yarn css:stats",
    "watch": "yarn build && yarn build -- --watch --recursive",
    "clean": "rimraf build/*",
    "storybook": "yarn watch & start-storybook",
    "precss:stats": "yarn build",
    "css:stats": "analyze-css --file build/bitstyles.css --pretty > test/css-stats.json",
    "precss:graph": "yarn build",
    "css:graph": "specificity-graph build/bitstyles.css --output test/specificity_graph/"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitcrowd/bitstyles.git"
  },
  "keywords": [
    "css",
    "sass"
  ],
  "author": {
    "name": "Bitcrowd GmbH.",
    "email": "info@bitcrowd.net"
  },
  "contributors": [
    {
      "name": "Darren Cadwallader"
    },
    {
      "name": "Charlie Owen"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitcrowd/bitstyles/issues"
  },
  "homepage": "https://github.com/bitcrowd/bitstyles#readme",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@storybook/addons": "^5.3.14",
    "@storybook/html": "^5.3.14",
    "analyze-css": "^0.12.7",
    "autoprefixer": "^9.7.4",
    "babel-loader": "^8.0.6",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "node-sass": "^4.12.0",
    "postcss-cli": "^7.1.0",
    "prettier": "^1.18.2",
    "rimraf": "^3.0.0",
    "specificity-graph": "^0.1.7",
    "storybook-readme": "^5.0.8",
    "stylelint": "^13.2.1",
    "stylelint-config-bitcrowd": "^4.0.0"
  },
  "files": [
    "scss"
  ],
  "browserslist": [
    "defaults"
  ]
}
