{
  "name": "bitstyles",
  "version": "1.5.0",
  "description": "The Bitcrowd CSS library",
  "main": "build/bitstyles.css",
  "scripts": {
    "build": "sass scss/bitstyles.scss build/bitstyles.css --style=compressed --no-source-map",
    "postbuild": "postcss build/bitstyles.css --replace",
    "lint:scss": "stylelint scss/**/*.scss --syntax scss",
    "lint:js": "eslint --ignore-path .gitignore --ext js,jsx .",
    "lint": "yarn lint:scss && yarn lint:js",
    "test": "sass test/scss/ --style=compressed --no-source-map && postcss test/scss/*.css --replace && diff --from-file build/bitstyles.css test/scss/test-import-all.css && diff --from-file build/bitstyles.css test/scss/test-use-all.css && diff --from-file build/bitstyles.css test/scss/test-use-each.css && diff --from-file build/bitstyles.css test/scss/test-import-each.css",
    "checks": "yarn lint && yarn css:stats",
    "watch": "yarn build && yarn build --watch",
    "clean": "rimraf build/*",
    "storybook": "start-storybook -p 6006",
    "precss:stats": "yarn build",
    "css:stats": "analyze-css --file build/bitstyles.css --pretty > test/css-stats.json",
    "precss:graph": "yarn build",
    "css:graph": "specificity-graph build/bitstyles.css --output test/specificity_graph/",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitcrowd/bitstyles.git"
  },
  "keywords": [
    "css",
    "sass"
  ],
  "author": {
    "name": "Bitcrowd GmbH.",
    "url": "https://bitcrowd.net",
    "email": "info@bitcrowd.net"
  },
  "contributors": [
    {
      "name": "Darren Cadwallader",
      "email": "darren@bitcrowd.net",
      "url": "https://github.com/planktonic"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitcrowd/bitstyles/issues"
  },
  "homepage": "https://bitcrowd.github.io/bitstyles",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@storybook/addon-a11y": "^6.3.4",
    "@storybook/addon-actions": "^6.3.4",
    "@storybook/addon-essentials": "^6.3.4",
    "@storybook/addon-links": "^6.3.4",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/html": "^6.3.4",
    "a11y-dialog": "^7.1.0",
    "alpinejs": "^2.8.2",
    "analyze-css": "^0.13.0",
    "autoprefixer": "^9.8.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^5.2.6",
    "cssnano": "^4.1.10",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.0.1",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.14.3",
    "eslint-plugin-react-hooks": "^1.7.0",
    "postcss": "^8",
    "postcss-cli": "^7.1.1",
    "postcss-loader": "^4",
    "prettier": "^1.18.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rimraf": "^3.0.0",
    "sass": "^1.34.0",
    "sass-loader": "^10.0.0",
    "specificity-graph": "^0.1.7",
    "style-loader": "^2.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-bitcrowd": "^4.0.0",
    "webpack": "^5.22.0"
  },
  "files": [
    "scss",
    "build",
    "assets"
  ],
  "browserslist": [
    "defaults"
  ]
}
