{
  "name": "bitstyles",
  "version": "4.3.0",
  "description": "The Bitcrowd CSS library",
  "main": "build/bitstyles.css",
  "scripts": {
    "build": "sass scss/bitstyles.scss build/bitstyles.css --style=compressed --no-source-map",
    "postbuild": "postcss build/bitstyles.css --replace",
    "lint:scss": "stylelint --ignore-path .gitignore 'scss/**/*.scss' --customSyntax postcss-scss",
    "lint:js": "eslint --ignore-path .gitignore --ext js,jsx .",
    "lint:scss:fix": "stylelint --ignore-path .gitignore 'scss/**/*.scss' --customSyntax postcss-scss --fix",
    "lint": "yarn lint:scss && yarn prettier:scss && yarn lint:js && yarn prettier:js && yarn prettier:docs",
    "prettier:fix": "yarn prettier:scss:fix && yarn prettier:js:fix && yarn prettier:docs:fix",
    "prettier:js": "prettier --ignore-path .gitignore --check './**/*.{js,jsx,json}'",
    "prettier:scss": "prettier --ignore-path .gitignore --check './**/*.scss'",
    "prettier:docs": "prettier --ignore-path .gitignore --check './**/*.{md,mdx}'",
    "prettier:js:fix": "prettier --ignore-path .gitignore --write './**/*.{js,jsx,json}'",
    "prettier:scss:fix": "prettier --ignore-path .gitignore --write './**/*.scss'",
    "prettier:docs:fix": "prettier --ignore-path .gitignore --write './**/*.{md,mdx}'",
    "prettier": "yarn prettier:js && yarn prettier:scss && yarn prettier:docs",
    "test": "script/test",
    "checks": "yarn lint && yarn css:stats && yarn test",
    "watch": "yarn build && yarn build --watch",
    "clean": "rimraf build/*",
    "storybook": "start-storybook -p 6006",
    "precss:stats": "yarn build",
    "css:stats": "analyze-css --file build/bitstyles.css --pretty > test/css-stats.json",
    "precss:graph": "yarn build",
    "build-storybook": "build-storybook"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitcrowd/bitstyles.git"
  },
  "keywords": [
    "css",
    "sass"
  ],
  "author": {
    "name": "Bitcrowd GmbH.",
    "url": "https://bitcrowd.net",
    "email": "info@bitcrowd.net"
  },
  "contributors": [
    {
      "name": "Darren Cadwallader",
      "email": "darren@bitcrowd.net",
      "url": "https://github.com/planktonic"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitcrowd/bitstyles/issues"
  },
  "homepage": "https://bitcrowd.github.io/bitstyles",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@storybook/addon-a11y": "^6.4.22",
    "@storybook/addon-actions": "^6.4.22",
    "@storybook/addon-essentials": "^6.4.22",
    "@storybook/addon-links": "^6.4.22",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/builder-webpack5": "^6.4.22",
    "@storybook/html": "^6.4.22",
    "@storybook/manager-webpack5": "^6.4.22",
    "a11y-dialog": "^7.1.0",
    "alpinejs": "^2.8.2",
    "analyze-css": "^2.1.8",
    "autoprefixer": "^10.4.2",
    "babel-loader": "^8.1.0",
    "css-loader": "^6.6.0",
    "cssnano": "^5.0.17",
    "eslint": "^8.7.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.11",
    "postcss": "^8.4.5",
    "postcss-cli": "^9.1.0",
    "postcss-loader": "^6.2.1",
    "postcss-scss": "^4.0.3",
    "prettier": "^2.5.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-is": "^17.0.1",
    "rimraf": "^3.0.0",
    "sass": "^1.49.0",
    "sass-loader": "^12.4.0",
    "specificity-graph": "^0.1.7",
    "style-loader": "^3.3.1",
    "stylelint": "^14.4.0",
    "stylelint-config-bitcrowd": "^5.1.0",
    "typescript": "^4.5.5",
    "webpack": "^5.68.0"
  },
  "files": [
    "scss",
    "build",
    "assets"
  ],
  "browserslist": [
    "defaults"
  ],
  "resolutions": {
    "**/trim": "^1.0.0"
  }
}
