{
  "name": "bitstyles",
  "version": "0.7.4",
  "description": "The Bitcrowd CSS library",
  "main": "bitstyles.scss",
  "private": true,
  "scripts": {
    "build:scss": "node-sass bitstyles/bitstyles.scss -o build --output-style compact",
    "build:process": "postcss -c postcss_build.json",
    "build": "npm run build:scss && npm run build:process",
    "lint:scss": "postcss -c postcss_lint.json",
    "lint": "gulp lint:scss lint:js",
    "lint:js": "gulp lint:js",
    "styleguide": "gulp styleguide",
    "test:build": "gulp test:build",
    "test:run": "gulp test:run",
    "watch": "gulp watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/bitcrowd/bitstyles.git"
  },
  "keywords": [
    "css",
    "sass"
  ],
  "author": {
    "name": "Bitcrowd GmbH.",
    "email": "info@bitcrowd.net"
  },
  "contributors": [
    {
      "name": "Darren Cadwallader"
    },
    {
      "name": "Charlie Owen"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/bitcrowd/bitstyles/issues"
  },
  "homepage": "https://github.com/bitcrowd/bitstyles#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "cssnano": "^3.6.2",
    "eslint": "^2.9.0",
    "eslint-config-bitcrowd": "0.0.3",
    "eslint-plugin-import": "^1.6.1",
    "gulp": "^3.9.1",
    "gulp-eslint": "^2.0.0",
    "gulp-specificity-graph": "0.0.1",
    "node-sass": "^3.10.1",
    "opener": "^1.4.1",
    "parker": "0.0.10",
    "postcss": "^5.2.4",
    "postcss-bem-linter": "^2.5.1",
    "postcss-cli": "^2.6.0",
    "postcss-reporter": "^1.4.1",
    "postcss-scss": "^0.3.1",
    "sc5-styleguide": "^0.3.45",
    "stylelint": "^7.0.1",
    "stylelint-config-standard": "^11.0.0"
  },
  "files": [
    "bitstyles"
  ]
}
